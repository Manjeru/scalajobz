# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index


GET    /signup                      controllers.Application.signUpOnScalaJobz
POST    /signup                      controllers.Application.newUser

GET    /login                      controllers.Application.loginOnScalaJobz
POST    /login/:flag                     controllers.Application.logIn(flag:String)

GET    /postAJob                      controllers.PostAJobController.postAJob
POST    /postAJob                      controllers.PostAJobController.newJob

GET    /findAllJobs                     controllers.Application.index

GET    /logout                          controllers.Application.logOutFromScalaJobz

POST   /findAJob                        controllers.PostAJobController.findAJob

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)